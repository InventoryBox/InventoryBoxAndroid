<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="11dp">

    <TextView
        android:id="@+id/item_mypost_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_font_family"
        android:textSize="11sp"
        android:textColor="#969696"
        android:lineSpacingExtra="1sp"
        android:text="3분전"
        android:layout_marginLeft="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/view19"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:elevation="5dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="9dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_mypost_datetime" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/exchange_mypost_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/exchange_mypost_img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/graph_rec9_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/exchangemain_btn_heart" />

            <TextView
                android:id="@+id/item_mypost_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nanum_font_family"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="1sp"
                android:textColor="#3a3a3a"
                android:textFontWeight="300"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/exchange_mypost_img"
                app:layout_constraintTop_toTopOf="@+id/exchange_mypost_img"
                tools:text="휘핑 크림" />

            <TextView
                android:id="@+id/item_mypost_expire_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/nanum_font_family"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="6sp"
                android:textColor="#818180"
                android:textFontWeight="300"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="@+id/item_mypost_product"
                app:layout_constraintTop_toBottomOf="@+id/item_mypost_product"
                tools:text="유통기한 2020. 12. 23" />

            <TextView
                android:id="@+id/item_mypost_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/nanum_font_family"
                android:lineSpacingExtra="1sp"
                android:textColor="#3a3733"
                android:textFontWeight="300"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/item_mypost_expire_date"
                app:layout_constraintTop_toBottomOf="@+id/item_mypost_expire_date"
                tools:text="4,000 원" />

            <TextView
                android:id="@+id/tv_exchange_mypost_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/exchange_rec14_mypost"
                android:paddingLeft="7dp"
                android:paddingTop="6dp"
                android:paddingRight="7dp"
                android:paddingBottom="6dp"
                android:text="거래완료"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
