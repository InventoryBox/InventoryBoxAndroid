<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_home_container"
    android:elevation="@dimen/cardview_default_elevation"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:backgroundTint="@color/white"
    android:background="@drawable/home_rv_border">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="78dp"
        android:layout_height="79dp"
        android:layout_marginVertical="6dp"
        android:layout_marginStart="6dp"
        android:orientation="vertical"
        android:elevation="@dimen/cardview_default_elevation"
        android:backgroundTint="@color/white"
        android:background="@drawable/home_rv_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_rv_product"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_rv_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:fontFamily="@font/nanum_square_bold"
            android:text="우유"
            android:textColor="#414743"
            android:textSize="11sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:checked="false"
        android:button="@android:color/transparent"
        android:background="@drawable/home_checkbox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="2dp"
            android:layout_height="12dp"
            android:background="#f6bb33"
            app:layout_constraintBottom_toBottomOf="@+id/tv_rv_order"
            app:layout_constraintEnd_toStartOf="@+id/tv_rv_order"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="발주 수량 메모"
            android:fontFamily="@font/nanum_square_extra_bold"
            android:textColor="#464646"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_rv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/home_et_count"
        android:paddingHorizontal="22dp"
        android:paddingVertical="5dp"
        android:fontFamily="@font/nanum_square_regular"
        android:text="10"
        android:textColor="#818080"
        android:textSize="9sp"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/nanum_square_bold"
        android:textSize="12sp"
        android:textColor="#464646"
        android:text="팩"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rv_count"
        app:layout_constraintStart_toEndOf="@+id/tv_rv_count"
        app:layout_constraintTop_toTopOf="@+id/tv_rv_count" />

    <ImageButton
        android:id="@+id/btn_rv_more"
        android:layout_width="66dp"
        android:layout_height="19dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/home_btn_moreview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:el_duration="300"
        app:el_expanded="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Content"
        android:textColor="#fff" />

    </net.cachapa.expandablelayout.ExpandableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>